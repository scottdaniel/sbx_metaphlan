rule metaphlan_bowtie:
    output:
        sambz2 = str(CLASSIFY_FP/'metaphlan'/'raw'/'{sample}.bowtie2.sam.bz2')
    input:
        pair = expand(str(QC_FP/'decontam'/'{sample}_{rp}.fastq.gz'),
                      sample = "{sample}",
                      rp = Pairs),
        dbdir = Cfg['sbx_metaphlan']['db']
    threads:
        Cfg['sbx_metaphlan']['threads']
    conda:
        "sbx_metaphlan_env.yml"
    shell:
        """
            #if you have the metaphlan environment pre-installed
            #e.g. "conda create -n metaphlan -c bioconda bowtie2 metaphlan"
            #then you can uncomment the following line and not "--use-conda" in sunbeam
